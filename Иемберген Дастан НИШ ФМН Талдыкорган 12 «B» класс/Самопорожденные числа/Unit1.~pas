unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Label1: TLabel;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  n,i,s,l,p:integer;
  f:boolean;
begin
  l:=0;
  f:=false;
  n:=strtoint(Edit1.text);
  if (n>=10) and (n<=99999) then
    begin
      repeat
        s:=0;
        p:=length(IntToStr(l));
        for i:=1 to p do 
          begin
            s:=s+StrToInt(Copy(IntToStr(l),i,1));
          end;
        if l+s=n then f:=true else l:=l+1;
      until (l=n) or (f=true);
      if f=true then Label1.Caption:=IntToStr(n)+' - поражденное'+'√енератор - '+IntToStr(l)+'.' else Label1.caption:=Inttostr(n)+' - самопоражденное.';
    end
  else Label1.Caption:='¬ведите натуральное число от 10 до 99999!';
end;
end.
